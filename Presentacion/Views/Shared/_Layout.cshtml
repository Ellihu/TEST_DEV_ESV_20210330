<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Presentacion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/kendoUi/styles/kendo.default-v2.css" rel="stylesheet" />
    <link href="~/lib/kendoUi/styles/kendo.default-v2.min.css" rel="stylesheet">

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/kendoUi/js/jszip.min.js"></script>
    <script src="~/lib/kendoUi/js/kendo.all.min.js"></script>
    <script src="~/lib/kendoUi/js/messages/kendo.messages.es-MX.min.js"></script>
    <script src="~/lib/kendoUi/js/cultures/kendo.culture.es-MX.min.js"></script>
    <style>
        .espaceR {
            margin-right: 12px;
        }
        /*Usar un media querie para la siguiente clase, retirar cuando sea mobil*/
        .ddlnv {
            color: #0056b3;
            margin-top: -9px;
        }

        .margenddln {
            margin-left: 25px;
        }

        .mTop {
            margin-top: 0px;
        }

        .cpanel {
            transition: box-shadow .25s, -webkit-box-shadow .25s;
            padding: 15px;
            margin: .0rem 0 1rem 0;
            margin-top: 70px !important;
            border-radius: 2px;
            box-shadow: 0 2px 2px 0 rgba(0,0,0,0.10), 0 3px 1px -2px rgba(0,0,0,0.12), 0 1px 5px 0 rgba(0,0,0,0.1);
        }

        .panel {
            transition: box-shadow .25s, -webkit-box-shadow .25s;
            padding: 15px;
            margin: .0rem 0 1rem 0;
            /*border-radius: 2px;*/
            /*box-shadow: 0 2px 2px 0 rgba(0,0,0,0.10), 0 3px 1px -2px rgba(0,0,0,0.12), 0 1px 5px 0 rgba(0,0,0,0.1);*/
        }

        .k-grid-content {
            max-height: 30em;
            min-height: 200px;
        }

        .fixed-top {
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            z-index: 1030;
        }
    </style>

</head>
<body>
    @if (TempData["JWToken"] != null)
    {
        <script>
                       localStorage.setItem("JWToken", "@TempData["JWToken"].ToString()");
        </script>
    }
    <script>
        var accesstoken = "";
        $(document).ready(function () {

            $(document).ajaxSend(function (event, jqXHR, options) {
                jqXHR.setRequestHeader('Authorization', 'Bearer ' + localStorage.getItem("JWToken"));
            });
            accesstoken = localStorage.getItem("JWToken");
        });

    </script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">


                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">


                    <ul class="navbar-nav flex-lg-grow-6 ">
                        <li class="nav-item ">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Cerrar Sesion</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="PersonasFisicas" asp-action="Index">Personas físicas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Customers" asp-action="Index">Reporte de Clientes</a>
                        </li>

                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-2">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Presentacion - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery-validation/dist/Jquery_forms.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
